generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ----------------------

model Application {
  id        String @id @default(uuid())
  name      String @unique
  namespace String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services Service[]
}

model Service {
  id   String @id @default(uuid())
  name String

  // Deployment settings
  replicas   Int     @default(1)
  ingressUrl String?

  // Resource requests (optional) - in millicores for CPU, MB for memory
  cpuRequest    Int?
  memoryRequest Int?

  // Resource limits (optional) - in millicores for CPU, MB for memory
  cpuLimit    Int?
  memoryLimit Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  applicationId String

  @@unique([applicationId, name])
  @@index([applicationId])
}
