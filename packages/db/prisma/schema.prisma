generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ----------------------

model Application {
  id        String @id @default(uuid())
  name      String @unique
  namespace String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services Service[]
}

model Service {
  id   String @id @default(uuid())
  name String

  // Deployment settings
  replicas   Int     @default(1)
  ingressUrl String?

  // Resource requests (optional) - in millicores for CPU, MB for memory
  cpuRequest    Int?
  memoryRequest Int?

  // Resource limits (optional) - in millicores for CPU, MB for memory
  cpuLimit    Int?
  memoryLimit Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  applicationId String

  envs          ServiceEnv[]
  apiKey        ApiKey?
  dockerSecrets ServiceDockerSecret[]
  tasks         Task[]

  @@unique([applicationId, name])
  @@index([applicationId])
}

enum TaskStatus {
  WAITING
  EXECUTING
  FAILED
  DONE
}

model Task {
  id     String     @id @default(uuid())
  status TaskStatus @default(WAITING)
  log    String[]   @default([]) // Task execution log (array for appending)
  meta   Json? // Optional metadata (e.g. image, params, etc.)

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  startedAt  DateTime? // When execution started
  finishedAt DateTime? // When execution finished

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String

  @@index([serviceId])
  @@index([status])
  @@index([createdAt])
}

model Env {
  id    String @id @default(uuid())
  key   String
  value String // Encrypted value

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services ServiceEnv[]
}

model ServiceEnv {
  id String @id @default(uuid())

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String

  env   Env    @relation(fields: [envId], references: [id], onDelete: Cascade)
  envId String

  createdAt DateTime @default(now())

  @@unique([serviceId, envId])
  @@index([serviceId])
  @@index([envId])
}

model ApiKey {
  id  String @id @default(uuid())
  key String @unique // Server-generated API key

  createdAt DateTime @default(now())

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String  @unique

  deploys ApiDeploy[]

  @@index([serviceId])
  @@index([key])
}

model ApiDeploy {
  id    String @id @default(uuid())
  image String // Docker image that was deployed

  createdAt DateTime @default(now())

  apiKey   ApiKey @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  apiKeyId String

  @@index([apiKeyId])
  @@index([createdAt])
}

model DockerSecret {
  id       String @id @default(uuid())
  name     String @unique
  server   String // Docker registry server (e.g. docker.io, ghcr.io)
  username String
  password String // Encrypted password

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services ServiceDockerSecret[]
}

model ServiceDockerSecret {
  id String @id @default(uuid())

  service        Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId      String
  dockerSecret   DockerSecret @relation(fields: [dockerSecretId], references: [id], onDelete: Cascade)
  dockerSecretId String

  createdAt DateTime @default(now())

  @@unique([serviceId, dockerSecretId])
  @@index([serviceId])
  @@index([dockerSecretId])
}
